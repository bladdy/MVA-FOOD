---
import LayoutAdmin from "@/layouts/LayoutAdmin.astro";
---

<LayoutAdmin title="MVA Foods Admin- Página no encontrada">
  <div class="flex justify-center">
    <div class="text-center mt-40">
      <img
        src="/mva-logo-rb.png"
        alt="MVA logo featuring a stylized hamburger, food truck, utensils, and large text MVA on an orange circle background, conveying a friendly and inviting food-related theme"
        class="mx-auto mb-4 h-48"
      />
      <h1 class="text-3xl font-bold text-orange-800">404</h1>
      <h1
        class="mt-4 text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl"
      >
        Página no encontrada
      </h1>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/admin/dashboard"
          class="rounded-md bg-orange-600 px-3.5 py-2.5 text-lg font-semibold text-white shadow-xs hover:bg-orange-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600"
          >Volver al inicio</a
        >
      </div>
    </div>
  </div>
</LayoutAdmin>
