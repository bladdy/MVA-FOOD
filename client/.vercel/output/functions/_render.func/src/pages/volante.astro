<style>
  /* Tamaño media página A4: 148mm x 210mm (landscape) o 105mm x 297mm (portrait) */
  .volante-a5 {
    width: 297px; /* 105mm ≈ 297px @ 72dpi */
    height: 210mm; /* 210mm */
    max-width: 100vw;
    max-height: 100vh;
  }
  @media print {
    .volante-a5 {
      width: 148mm;
      height: 210mm;
      box-shadow: none !important;
      border: none !important;
    }
    body {
      background: none !important;
    }
    .no-print {
      display: none !important;
    }

    .volante-a5 {
      box-shadow: none !important;
      border: none !important;
      page-break-after: always;
    }
  }
  p {
    width: 100%;
    word-break: break-word;
    overflow-wrap: anywhere;
  }
  .logo-shadow {
    filter: drop-shadow(0 4px 12px rgb(255, 255, 255));
  }
  .title-shadow {
    text-shadow:
      2px 2px 8px rgb(255, 251, 251);
  }
</style>
<LayoutMenu
  title="Volante Mva Foods"
  description="Volante de Mva Foods para restaurantes, menú digital con QR y enlace web."
>
  <div class="flex items-center justify-center p-4 no-print">
