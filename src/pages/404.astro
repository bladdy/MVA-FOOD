---
import Layout from "@/layouts/Layout.astro";
---

<Layout	
	title="Página no encontrada - MVA Foods">
	<div class="flex items-center justify-center h-screen bg-gray-100">
		<div class="text-center">
            <img src="/mva-logo-rb.png" 
            alt="MVA logo featuring a stylized hamburger, food truck, utensils, and large text MVA on an orange circle background, conveying a friendly and inviting food-related theme"
             class="mx-auto mb-4 h-48">
			<h1 class="text-4xl font-bold text-orange-800">404</h1>
			<h1 class="mt-4 text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl">Página no encontrada</p>
				<div class="mt-10 flex items-center justify-center gap-x-6">
					<a href="/" class="rounded-md bg-orange-600 px-3.5 py-2.5 text-lg font-semibold text-white shadow-xs hover:bg-orange-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">Volver al inicio</a>
				
				</div>
		</div>
	</div>
</Layout>