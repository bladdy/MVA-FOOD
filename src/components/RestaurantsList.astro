---
// RestaurantsList.astro
import RestauranteCard from './RestauranteCard.astro';
import type { Restaurante } from '@/Types/Restaurante';

const { restaurantes } = Astro.props;
---

<div class="lg:w-4/6 w-full">
  <div class="mx-auto py-4 flex flex-col justify-center items-center">
    <h2 class="text-3xl font-semibold text-orange-600 lg:mb-6 text-center">
      Restaurantes
    </h2>

    <section class="w-full max-w-[1600px] grid lg:grid-cols-12 auto-rows-[15rem] gap-4 mx-auto p-6 md:p-12 lg:p-20">
      {restaurantes.map((restaurant: Restaurante) => {
        return (
          <RestauranteCard
            href={`/restaurantes/${restaurant.id}`}
            name={restaurant.name}
            image={restaurant.image}
            perfilImage={restaurant.perfilImage ?? "/img/default.jpg"}
            tipoComida={restaurant.tipos ?? ["Sin categorÃ­a"]}
            direccion={restaurant.direccion ?? "DirecciÃ³n no disponible"}
          />
        );
      })}
    </section>
  </div>
</div>
